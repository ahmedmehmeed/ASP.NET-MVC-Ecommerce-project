@model Ecommerce.View_Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 style="color:/*#14213D*/ black; margin-top:150px; font-weight:bolder;margin-left:460px;">Register <img src="/Images/i-love-you (2).png"/> </h1>

<div class="row" style="margin-left:350px;">
    <div class="col-md-4">
        <form asp-action="Register" style=" margin-top:50px; width:400px; ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label" style=" font-weight:bold; font-size : 20px; color:#6A040F ;"></label>
                <input asp-for="UserName" class="form-control" style=" border-color:#9D0208 ; margin-bottom:20px;" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FName" class="control-label" style=" font-weight:bold; font-size : 20px; color:#6A040F ;"></label>
                <input asp-for="FName" class="form-control"  style=" border-color:#9D0208 ; margin-bottom:20px;"/>
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label" style=" font-weight:bold; font-size : 20px; color:#6A040F ;"></label>
                <input asp-for="LName" class="form-control" style=" border-color:#9D0208 ; margin-bottom:20px;"/>
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style=" font-weight:bold; font-size : 20px; color:#6A040F ;"></label>
                <input asp-for="Email" class="form-control" style=" border-color:#9D0208 ; margin-bottom:20px;"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label" style=" font-weight:bold; font-size : 20px; color:#6A040F ;"></label>
                <input asp-for="PhoneNumber" class="form-control" style=" border-color:#9D0208 ; margin-bottom:20px;"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style=" font-weight:bold; font-size : 20px; color:#6A040F ;"></label>
                <input asp-for="Password" class="form-control" style=" border-color:#9D0208 ; margin-bottom:20px;"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confirmpassword" class="control-label" style=" font-weight:bold; font-size : 20px; color:#6A040F ;"></label>
                <input asp-for="Confirmpassword" class="form-control" style=" border-color:#9D0208 ; margin-bottom:40px;"/>
                <span asp-validation-for="Confirmpassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-outline-light font-weight-bold  " style=" border-color:#9D0208 ; color:/*#14213D*/ black; margin-bottom:20px; margin-left:150px;" />
            </div>
        </form>
    </div>
</div>

