<h1 class ="mt-5"  style="color:#6A040F ; font-weight:bolder; margin-top:100px; margin-left:400px;">Select Category</h1>
<br />

<select id="categories" class ="form-control" onchange="getAll()"  >
    @foreach (var item in Model)
   {
        <option value="@item.Id">@item.Name</option>       
   }
</select>

<div id = "Products" style="margin-bottom:200px;"></div>
<script>
    
    function getAll(){
        var Id=$("#categories").val();
        
        $.ajax(
            {
                url: `/Home/Products?CatId=${Id}`,
                
                success: function(result){
                    
                    $("#Products").html(result);
                }
            }
         );
    }
</script>










