
@model List<Category>
<table class="table table-striped  box-shadow table-responsive-md  " style="margin-top:150px;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
     
   @foreach (var item in Model)
  {
       <tr>
      <td scope="row">@item.Id</td>
      <td>@item.Name</td>
      <td class="text-right">
          <a asp-action="Edit" class="btn btn-outline-primary TEXT-right"  asp-controller="Category" asp-route-id = "@item.Id">Edit Category</a>
         <a asp-action="Delete" class="btn btn-outline-danger " asp-controller="Category" asp-route-id = "@item.Id" onclick="ConfirmDelete()">Delete</a>
      </td>
     
    </tr>

  }



  </tbody>
</table>
<div class="row d-flex flexflex-column align-items-center">
    
  <a asp-action="Add" asp-controller="Category"  class="btn btn-outline-success rounded col-2 text-large mx-auto ">Add New Category</a>
</div>
 
<script>
    function ConfirmDelete(){
        var confirmed=confirm("Are You Sure?");
        if(confirmed==false){
            event.preventDefault();
        }
    } 
</script>